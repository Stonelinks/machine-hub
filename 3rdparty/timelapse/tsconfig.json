    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "module": "commonjs",
    "lib": ["es2015", "es2016", "es2017", "dom", "esnext.asynciterable"],
    "moduleResolution": "node",
    "noEmit": true,
    "strict": false,
    "skipLibCheck": true,
    "target": "esnext"
  },
  "rulesDirectory": ["node_modules/tslint-microsoft-contrib"],
  "include": ["**/*"],
  "exclude": ["node_modules", "timelapse-viewer"]
}
